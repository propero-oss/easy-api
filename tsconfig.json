{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "checkJs": false,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "types": [
      "jest",
      "node"
    ],
    "lib": [
      "esnext"
    ],
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"],
      "example/*": ["./example/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "example/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
